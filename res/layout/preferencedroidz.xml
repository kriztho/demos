<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              
    <TextView
	    android:id="@+id/lblSpeed"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="15dp"
	    android:text="Speed Value"
	    android:textAppearance="?android:attr/textAppearanceSmall" />
              
	<LinearLayout
	              android:orientation="horizontal"
	              android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:gravity="center">
	              
	    <Button
		    android:id="@+id/btnDecreaseSpeed"
		    android:layout_width="50dp"
		    android:layout_height="50dp"		    
		    android:layout_marginRight="10dp" 
		    android:text="-" />
	
		<TextView 
		    android:id="@+id/txtViewSpeedValue"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"		    
		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
		    android:text="10"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
		
		<Button
		    android:id="@+id/btnIncreaseSpeed"
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:layout_alignParentRight="true"
		    android:layout_marginLeft="10dp"		    
		    android:text="+" />
	</LinearLayout>
	
	<TextView
	    android:id="@+id/lblNumberDroids"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="15dp"
	    android:text="Number of droids"
	    android:textAppearance="?android:attr/textAppearanceSmall" />
              
	<LinearLayout
	              android:orientation="horizontal"
	              android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:gravity="center">
	              
	    <Button
		    android:id="@+id/btnDecreaseDroids"
		    android:layout_width="50dp"
		    android:layout_height="50dp"		    
		    android:layout_marginRight="10dp" 
		    android:text="-" />
	
		<TextView 
		    android:id="@+id/txtViewNumberDroids"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"		    
		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
		    android:text="10"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
		
		<Button
		    android:id="@+id/btnIncreaseDroids"
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:layout_alignParentRight="true"
		    android:layout_marginLeft="10dp"		    
		    android:text="+" />
	</LinearLayout>
</LinearLayout>